{
  "name": "the-accordion-block/accordion",
  "title": "Accordion Block",
  "category": "design",
  "description": "Add beautiful, accessible, and SEO-optimized FAQ accordions anywhere on your site.",
  "keywords": ["accordion", "faq", "collapse", "toggle", "expandable"],
  "textdomain": "the-accordion-block",
  "attributes": {
    "question": {
      "type": "string",
      "source": "html",
      "selector": ".the-accordion-block__question-text"
    },
    "icon": {
      "type": "string",
      "default": "chevron"
    },
    "iconPosition": {
      "type": "string",
      "default": "after"
    },
    "disableCss": {
      "type": "boolean",
      "default": false
    },
    "defaultOpen": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "html": false,
    "anchor": true,
    "align": ["wide", "full"],
    "color": {
      "text": true,
      "background": true
    },
    "spacing": {
      "margin": true,
      "padding": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    }
  },
  "example": {
    "attributes": {
      "question": "What is the Accordion Block?",
      "defaultOpen": true
    },
    "innerBlocks": [
      {
        "name": "core/paragraph",
        "attributes": {
          "content": "The Accordion Block is a Gutenberg block that allows you to add FAQ-style accordions to your website with rich content support."
        }
      }
    ]
  },
  "styles": [
    {
      "name": "default",
      "label": "Default (WPDS)",
      "isDefault": true
    },
    {
      "name": "modern",
      "label": "Modern"
    },
    {
      "name": "minimal",
      "label": "Minimal"
    }
  ],
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}